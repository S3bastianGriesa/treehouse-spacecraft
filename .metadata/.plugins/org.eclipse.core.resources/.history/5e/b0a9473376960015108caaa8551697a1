package de.thg.blockx2D.data.entity;

public abstract class AbstractMoveableEntity extends AbstractEntity implements MoveableEntity {
	private int moveLength;
	private Direction direction;
	private boolean isMoving;
	private long lastMove;
	private float moveSpeed;
	private double move;

	public AbstractMoveableEntity(double x, double y, double width, double height) {
		super(x, y, width, height);
		direction = Direction.DOWN;
		moveLength = 150;
		moveSpeed = 2f;
	}

	@Override
	public void update(long delta) {
		updateMove(delta);
	}

	private void updateMove(long delta) {
		lastMove = lastMove + delta;
		if (lastMove > moveLength) {
			if (isMoving) {
				isMoving = false;
			} else if (Math.abs(move) != this.getX() + this.getY()) {
				move = this.getX() + this.getY();
				isMoving = true;
			}
			lastMove = 0;
		}
	}

	@Override
	public Direction getDirection() {
		return direction;
	}

	@Override
	public boolean isMoving() {
		return isMoving;
	}

	public abstract EntityType getType();

	@Override
	public float getSpeed() {
		return this.moveSpeed;
	}
}
